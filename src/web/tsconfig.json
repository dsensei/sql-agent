{
  "include": [
    "./**/*",
    "../**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "../../dist",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  }
}